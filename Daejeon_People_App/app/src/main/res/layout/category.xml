                        </TableRow>
                    </TableLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TableRow>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/shopping"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_shopping" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@id/shopping"
                                        android:layout_alignLeft="@id/shopping"
                                        android:layout_alignRight="@id/shopping"
                                        android:layout_alignTop="@id/shopping"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="쇼핑"
                                        android:textColor="@color/White"
                                        android:textSize="50dp" />

                                    <Button
                                        android:background="@drawable/round_corner_middle"
                                        android:layout_width="100dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/White"
                                        android:text="살펴보기" />
                                </LinearLayout>
                            </RelativeLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TableRow>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/food"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_food" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@id/food"
                                        android:layout_alignLeft="@id/food"
                                        android:layout_alignRight="@id/food"
                                        android:layout_alignTop="@id/food"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="음식점"
                                        android:textColor="@color/White"
                                        android:textSize="50dp" />

                                    <Button
                                        android:background="@drawable/round_corner_middle"
                                        android:layout_width="100dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/White"
                                        android:text="살펴보기" />
                                </LinearLayout>
                            </RelativeLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>