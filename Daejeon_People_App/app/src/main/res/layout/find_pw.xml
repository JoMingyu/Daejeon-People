<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/phone_certified_background"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="비밀번호 찾아보기"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/inputId"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:inputType="text"
            android:hint="아이디를 입력하세요"
            android:textColorHint="@color/colorPrimaryHint"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:hint="이메일을 입력하세요"
            android:textColorHint="@color/colorPrimaryHint"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/inputCode"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:inputType="text"
            android:hint="인증번호를 입력하세요"
            android:textColorHint="@color/colorPrimaryHint"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/findBtn"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner_middle"
            android:text="찾아보기"
            android:textColor="@color/White"
            android:layout_marginBottom="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"></LinearLayout>
</LinearLayout>
